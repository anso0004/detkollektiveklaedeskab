---
import { Image } from "astro:assets";
import figure1 from "../assets/images/figure_1.webp";
import skab from "../assets/images/skab.svg";
---

<div class="overflow-clip">
  <section id="horisontalscrollsection" class="h-[600vw]">
    <ul id="horisontalliste" class="list-none pl-0 flex sticky top-[10vh]">
      <li class="grid grid-cols content-center ml-12xl w-[30vw] overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[1000px]"><h1 class="text-h1_d font-display text-brown-800 text-right">5 Steps <br /> til at <br /> komme<br /> i gang</h1></figure></li>
      <li class="pl-0 flex w-[60vw] items-start justify-center flex-col md:flex-row overflow-hidden flex-grow-0 flex-shrink-0 flex-auto">
        <figure class="flex flex-row max-w-[1000px]">
          <h1 class="md:text-[710px] text-brown-800 leading-none">1</h1><div class="flex flex-col justify-between pt-10xl pb-5xl">
            <figcaption class="text-h3_m md:text-h3_d font-display text-brown-800">Køb abonnement</figcaption><video class="rounded-border-radius-43" autoplay loop muted>
              <source src="video_step_5.mp4" />
            </video>
          </div>
        </figure>
      </li>
      <li class="pl-0 flex w-[90vw] items-start justify-center flex-col md:flex-row overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[1000px]"><h1 class="md:text-[710px] text-brown-800 leading-none pr-2xl">2</h1><div class="flex flex-col justify-between pt-10xl pb-5xl"><figcaption class="text-h3_m md:text-h3_d font-display text-brown-800">Køb abonnement</figcaption><Image src={skab} class="flex justify-center max-w-20xl" alt="klædeskab" /></div></figure></li>
      <li class="pl-0 flex w-[80vw] items-start justify-center flex-col md:flex-row overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[1000px]"><h1 class="md:text-[710px] text-brown-800 leading-none pr-2xl">3</h1><div class="flex flex-col justify-between pt-10xl pb-5xl"><figcaption class="text-h3_m md:text-h3_d font-display text-brown-800">Køb abonnement</figcaption><Image src={skab} class="flex justify-center max-w-20xl" alt="klædeskab" /></div></figure></li>
      <li class="pl-0 flex w-[80vw] items-start justify-center flex-col md:flex-row overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[1000px]"><h1 class="md:text-[710px] text-brown-800 leading-none pr-2xl">4</h1><div class="flex flex-col justify-between pt-10xl pb-5xl"><figcaption class="text-h3_m md:text-h3_d font-display text-brown-800">Køb abonnement</figcaption><Image src={skab} class="flex justify-center max-w-20xl" alt="klædeskab" /></div></figure></li>
      <li class="pl-0 flex w-[80vw] items-start justify-center flex-col md:flex-row overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"><figure class="flex flex-row max-w-[1000px]"><h1 class="md:text-[710px] text-brown-800 leading-none pr-2xl">5</h1><div class="flex flex-col justify-between pt-10xl pb-5xl"><figcaption class="text-h3_m md:text-h3_d font-display text-brown-800">Køb abonnement</figcaption><Image src={skab} class="flex justify-center max-w-20xl" alt="klædeskab" /></div></figure></li>
    </ul>
  </section>
</div>

---
const { url = "#", overskrift = "", adresse1 = "", adresse2 = "", cardimage = "", cardimagealt = "" } = Astro.props;
import { Image } from "astro:assets";
import Linket from "../components/Linket.astro";
---

<article class="card bg-neutrals-50 rounded-border-radius-43 max-w-[327px] flex flex-col @container lg:max-w-[367px] hover:scale-105 transition-transform">
  <a href={url}>
    <img src={cardimage} alt={cardimagealt} />
    <section class="space-y-ml px-ml pt-m pb-ml 2xl:p-xl">
      <div class="space-y-sm">
        <h5 class="text-h5_m font-sans font-bold lg:text-h5_d">{overskrift}</h5>
        <div class="space-y-xxs">
          <h6 class="text-h6_m font-sans font-regular lg:text-h6_d">{adresse1}</h6>
          <h6 class="text-h6_m font-sans font-regular lg:text-h6_d">{adresse2}</h6>
        </div>
      </div>
      <div class="">
        <Linket href="https://www.google.dk/maps/@55.6859392,12.5403136,13z?entry=ttu&g_ep=EgoyMDI0MTIxMS4wIKXMDSoASAFQAw%3D%3D" target="target_self" cardimage_r="/red_l.svg" cardimage_l="/red_r.svg" cardimage_r_alt="rød højre side" cardimage_l_alt="rød venstre side">Find butik</Linket>
      </div>
    </section>
  </a>
</article>

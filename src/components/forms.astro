---
import Button from "../components/Button.astro";
---

<form class="space-y-xl" name="nyhedsbrev" netlify>
  <div class="flex flex-col space-y-sm">
    <h5 class="text-h5_m font-bold lg:text-h5_d">Kontaktinformation</h5>
    <div class="flex flex-col gap-1 space-y-xxs">
      <label class="text-p font-bold" for="fuldenavn">Fuldenavn:</label>
      <input class="rounded-border-radius-11 border-none py-s px-m min-w-[16.125rem] bg-neutrals-50" id="fornavn" name="fornavn" type="text" placeholder="Andrea" />
    </div>
    <div class="flex flex-col gap-1 space-y-xxs">
      <label class="text-p font-bold" for="tel">Telefon nummer</label>
      <input class="rounded-border-radius-11 border-none py-s px-m min-w-[16.125rem] bg-neutrals-50" id="telefon" name="telefon" type="tel" placeholder="+45 10 20 30 40" />
    </div>
    <div class="flex flex-col gap-1">
      <label class="text-p font-bold" for="email">E-mail:</label>
      <input class="rounded-border-radius-11 border-none py-s px-m min-w-[16.125rem] bg-neutrals-50" id="email" name="email" type="email" placeholder="andreaandreasen@gmail.dk" />
    </div>
  </div>
  <div class="flex flex-col gap-1 space-y-sm">
    <h5 class="text-h5_m font-bold lg:text-h5_d">Faktureringsadresse</h5>
    <div class="flex flex-col gap-1 space-y-xxs">
      <label class="text-p font-bold" for="land">Land:</label>
      <input class="rounded-border-radius-11 border-none py-s px-m min-w-[16.125rem] bg-neutrals-50" id="land" name="land" type="text" placeholder="Danmark" />
    </div>
    <div class="md:flex md:justify-between md:gap-xxs md:space-x-m space-y-sm md:space-y-0 w-full">
      <div class="flex flex-col gap-1 space-y-xxs w-full">
        <label class="text-p font-bold" for="postnummer">Postnummer:</label>
        <input class="rounded-border-radius-11 w-full border-none py-s px-m bg-neutrals-50" id="postnummer" name="postnummer" type="text" placeholder="1860" />
      </div>
      <div class="flex flex-col gap-1 space-y-xxs w-full">
        <label class="text-p font-bold" for="by">By:</label>
        <input class="rounded-border-radius-11 w-full border-none py-s px-m bg-neutrals-50" id="by" name="by" type="text" placeholder="Vinget 12" />
      </div>
    </div>
  </div>
  <div class="space-y-sm">
    <input type="checkbox" id="my-id" class="rounded-border-radius-4 border-none bg-neutrals-50" />
    <label for="my-id">Jeg accepterer handelsbetingelserne.</label>
    <p class="text-p">* Felter skal udfyldes</p>
  </div>
  <div class="md:max-w-60">
    <Button type="submit" href="#" cardimage_r="red_l.svg" cardimage_l="red_r.svg" cardimage_r_alt="rød højre side" cardimage_l_alt="rød venstre side">Forsæt til betaling</Button>
  </div>
</form>

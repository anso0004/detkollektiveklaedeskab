---
// Astro-komponent med Alpine.js
import "animate.css";
---

<!-- Chat-GPT, hjælp til at udskifte navne og byer -->
<div
  class="max-w-[20.375rem] md:max-w-[43rem] lg:max-w-[58rem] xl:max-w-[70rem] 2xl:max-w-[87rem] mx-auto"
  x-data="{ 
      names: ['Anders', 'Sofie', 'Amalie', 'Gurli', 'Laura', 'Magnus', 'Kaja'],
      places: ['i Roskilde', 'på Nørrebro', 'på Vesterbro', 'i Aarhus'],
      currentNameIndex: 0,
      currentPlaceIndex: 0,
      get currentName() { return this.names[this.currentNameIndex] },
      get currentPlace() { return this.places[this.currentPlaceIndex] },
      startRotation() {
        setInterval(() => {
          // Opdater navne
          this.currentNameIndex = (this.currentNameIndex + 1) % this.names.length;
          this.currentPlaceIndex = (this.currentPlaceIndex + 1) % this.places.length;
        }, 2000); // Skifter navn hvert 2. sekund
      }
    }"
  x-init="startRotation()"
  class="flex items-center justify-center"
>
  <h1 class="text-h1_m lg:text-h1_d font-display text-brown-800">
    Gør som <span class="text-blue-500 animate__animated animate__flipInX" x-text="currentName"></span>, <br /> bliv en del af klædeskabet <br />
    <span class="text-red-500 animate__animated animate__flipInX" x-text="currentPlace"></span>
  </h1>
</div>

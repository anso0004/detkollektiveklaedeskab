  import { animate, scroll, inView } from "motion";

  const screenwidth = window.innerWidth;

  // const items = document.querySelectorAll("#horisontalliste li");

  if (screenwidth > 1500) {
    console.log("stor");
    scroll(animate(".parallaxgrafik1", { x: [-500, -1100] }), {
      target: document.querySelector(".parallaxgrafik"),
      offset: ["start end", "end start"],
    });
    scroll(animate(".parallaxgrafik2", { x: [800, 50] }), {
      target: document.querySelector(".parallaxgrafik"),
      offset: ["start end", "end start"],

---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Accordion from "../components/Accordion.astro";
import Abonnement from "../components/card_abonnement.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
---

<MainLayout title="Titel">
  <article>
    <h1>Index overskrift</h1>
    <Button left="yellow_l" right="yellow_r" hover="hover" variant="secondary">Klik!</Button>
    <Button left="red_l" right="red_r" hover="hover" variant="primary">Klik!</Button>
    <p>Link til <Link href="https://www.kea.dk" target="_blank">En anden side</Link></p>
    <Image src={thumbsup} alt="" />
  </article>
  <article>
    <section class="grid lg:grid-cols-2 gap-3xl max-w-[818px]">
      <Abonnement url="#" badge="false" type="Basis" pris="199" />
      <Abonnement url="#" badge="true" type="Plus" pris="299" />
    </section>
  </article>
</MainLayout>

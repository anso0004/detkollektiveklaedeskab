---
import MainLayout from "../layouts/MainLayout.astro";
import Forms from "../components/forms.astro";
import Card_forms from "../components/card_forms.astro";
import Linket from "../components/Linket.astro";
import { Image } from "astro:assets";
import line from "../assets/images/line.svg";
import line_mobile from "../assets/images/linemobil.svg";
import linemd from "../assets/images/linemd.svg";
---

<MainLayout title="Køb Plus" description="Her kan du købe et plus abonnement og dele tøj med andre" ogtitle="Køb plus abonnement" ogdescription="Køb plus abonnement og del klædeskab">
  <article class="cursor cursor-blue_yellow_cursor">
    <section class="max-w-[20.375rem] md:max-w-[43rem] lg:max-w-[58rem] xl:max-w-[70rem] 2xl:max-w-[87rem] mx-auto">
      <div class="flex flex-cols mb-l md:mb-3xl justify-center items-center">
        <div class="md:max-w-60">
          <Linket href="/koeb_plus" variant="progres" hover="hover">1</Linket>
        </div>
        <Image class="hidden lg:flex" src={line} alt="linje" />
        <Image class="hidden md:flex lg:hidden" src={linemd} alt="linje" />
        <Image class="lg:hidden md:hidden" src={line_mobile} alt="linje" />
        <p class="w-ml h-ml border-border-2 font-bold border-brown-800 rounded-border-radius-full text-p text-brown-800 flex items-center justify-center">2</p>
      </div>
      <h3 class="text-h3_m lg:text-h3_d font-display md:text-center text-brown-800 mb-2xl">Indtast kontaktoplysninger</h3>
      <article class="md:grid md:grid-cols-2 md:gap-4xl md:grid-rows-1">
        <div class="col-start-1 md:col-start-2 mb-4xl">
          <Forms />
        </div>
        <div class="col-start-2 md:col-start-1 md:row-start-1 mb-4xl">
          <Card_forms type="Plus" , butik="Alle butikker" , point="50" , uden_moms="259,20" , moms="39,80" , ialt="299" />
        </div>
      </article>
    </section>
  </article>
</MainLayout>
